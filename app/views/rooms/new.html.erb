<div>
  <%= form_for(@room) do |f| %>
    <%= render 'shared/error_messages' %>
    <div class="form-group">
      <%= f.label "ルーム名" %>
      <%= f.text_field :name, class:"form-control"  %>　<br>
    </div>
    <div class="form-group">
      <%= f.label "ルーム紹介" %>
      <%= f.text_area :content, class:"form-control"  %>　<br>
    </div>
      <%= f.label "料金" %>
      <%= f.number_field :cost, class:"form-control"  %>　<br>
    <div class="form-group">
      <%= f.label "住所" %>
      <%= f.text_field :address, class:"form-control"  %>　<br>
    </div>
    <div class="form-group">
      <%= f.label "ルーム画像" %>
      <%= f.file_field :picture, class:"form-control"  %>　<br>
    </div>
      <%= f.submit "登録", class:"btn btn-primary" %>
  <% end %>
</div>